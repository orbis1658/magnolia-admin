<article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-6">
        <div class="flex items-center space-x-2 mb-3">
            <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
                {{ article.category }}
            </span>
            <time class="text-sm text-gray-500">
                {{ article.pub_date | formatDate }}
            </time>
        </div>
        
        <h2 class="text-xl font-semibold text-gray-900 mb-3">
            <a 
                href="/articles/{{ article.slug }}"
                class="hover:text-blue-600 transition-colors duration-200"
            >
                {{ article.title }}
            </a>
        </h2>
        
        <p class="text-gray-600 mb-4">
            {{ article.body | excerpt(150) }}
        </p>
        
        {% if article.tags and article.tags.length > 0 %}
        <div class="flex flex-wrap gap-2">
            {% for tag in article.tags %}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                #{{ tag }}
            </span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</article> 